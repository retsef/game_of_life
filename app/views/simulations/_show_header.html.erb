<div class="md:flex md:items-center md:justify-between">
  <div id="<%= dom_id(@simulation, 'generation_number') %>" class="min-w-0 flex-1">
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
      Generation <%= @simulation.latest_generation.number %>
    </h2>
  </div>

  <div id="<%= dom_id(@simulation, 'actions') %>" class="mt-4 flex md:mt-0 md:ml-4">
    <%= render Simulation::Actions::Component.new(@simulation) %>
  </div>
</div>
