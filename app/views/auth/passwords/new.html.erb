<div>
  <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Forgot your password?</h2>

  <p class="mt-2 text-center text-sm text-gray-600">
    <%= link_to "Log in to access", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>

    <% if devise_mapping.registerable? %>
      Or
      <%= link_to "Create a new account", new_registration_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    <% end %>
  </p>
</div>

<div class="mt-8">
  <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { class: 'mt-8 space-y-6', method: :post, 'data-turbo': false } do |f| %>
    <%= render Form::ErrorMessages::Component.new(resource: resource) %>

    <div class="field">
      <%= f.label :email %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>
</div>
