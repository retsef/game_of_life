<div>
  <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign up for your new account</h2>

  <p class="mt-2 text-center text-sm text-gray-600">
    Or
    <%= link_to "log in with your account", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>
</div>

<div class="mt-8">

  <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-8 space-y-6', 'data-turbo': false } do |f| %>
    <%= render Form::ErrorMessages::Component.new(resource: resource) %>

    <div class="field">
      <%= f.label :email %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="field space-y-1">
      <%= f.label :password %>
      <div class="mt-1">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        <%= f.hint :password, "(#{@minimum_password_length} characters minimum)" if @minimum_password_length %>
      </div>
    </div>

    <div class="field space-y-1">
      <%= f.label :password_confirmation %>
      <div class="mt-1">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
